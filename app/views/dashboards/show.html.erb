<div class="md:flex gap-4" data-controller="dashboard">
  <%= render 'shared/sidebar' %>
  <div class="mx-auto mt-56 text-center text-slate-900 md:p-2 z-0">
    <div class="">
      <% if @user.fclasses.size == 0 %>
        <h1 class="text-xl md:text-3xl font-semibold">Your library is empty</h1>
        <div class="text-slate-400 text-2xl md:text-2xl w-fit font-bold flex items-center mt-4 cursor-pointer hover:text-slate-600 gap-2">
          <i class="fa-solid fa-circle-plus"></i>
          <span class="text-xl underline" data-action="click->dashboard#show">Create new class to start learning now</span>
        </div>
      <% else %>
        <h1 class="text-xl md:text-3xl font-semibold">Start studying now</h1>
        <div class="text-2xl md:text-2xl w-fit font-bold flex items-center mt-4 text-slate-600 gap-2">
          <span class="text-xl">Pick your favorite class to start</span>
        </div>
      <% end %>
    </div>
  </div>
  <%= render 'dashboards/modal' %>
</div>
