<div class="hidden fixed top-0 bottom-0 left-0 right-0 bg-slate-950 opacity-70 z-40" data-dashboard-target="overlay" data-action="click->dashboard#hide">
</div>

<div class="hidden fixed bg-white z-50 top-56 text-center p-2 py-6 rounded-xl left-6 right-6 md:left-1/3 md:right-1/3" data-dashboard-target="modal">
  <div class="absolute top-2 right-4 cursor-pointer text-xl text-slate-400 hover:text-slate-900" data-action="click->dashboard#hide">
    <i class="fa-solid fa-xmark"></i>
  </div>
  <div class="font-bold text-xl text-emerald-500">
    Create New Class
  </div>
  <p class="font-semibold mb-2">A Class is set of Flashcards, grouped into Decks</p>
  <%= form_with(url: "/fclasses", html: {class: 'flex flex-col items-center gap-2'}) do |f|%>
    <%= f.text_field :class_title, autofocus: true, placeholder: 'Class title', class:"rounded-md focus:ring-0 border-2 border-slate-400 focus:border-emerald-500" %>
    <%= f.submit "Create", class: "cursor-pointer bg-emerald-500 hover:bg-emerald-600 w-fit text-white font-semibold px-2 py-1 rounded-md" %>
  <% end %>
</div>
