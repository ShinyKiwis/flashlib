<div class="flex text-xl h-12 items-center hover:bg-slate-300 px-4 cursor-pointer mt-2 rounded-md odd:bg-slate-100">
  <div>
    <h3 class=""><%= deck.title %></h3>
  </div>
  <div class="ms-auto hidden md:flex gap-4 md:gap-2 items-center text-2xl">
    <%= button_to deck_path(deck), method: :delete, form: {data: {turbo_confirm: 'Are you sure you want to delete this deck?'}} do %> 
      <i class="fa-solid fa-trash-can text-red-500 hover:text-red-700"></i>
    <% end %>
    <%= link_to edit_deck_path(fclass, deck) do %> 
      <i class="fa-solid fa-pen text-emerald-500 hover:text-emerald-700"></i>
    <% end %>
    <% if deck.cards.size != 0 %>
      <%= link_to deck_study_path(fclass, deck) do %>
        <i class="fa-solid fa-circle-play text-blue-500 hover:text-blue-700"></i>
      <% end %>
    <% else %>
        <i class="fa-solid fa-circle-play text-zinc-500 hover:text-zinc-600"></i>
    <% end %>
  </div>
  <div class="ms-auto md:hidden text-2xl">
    <i class="fa-solid fa-ellipsis" data-action="click->deck#show_option" data-deck-id-value=<%= deck.id %>></i>
  </div>
</div>
