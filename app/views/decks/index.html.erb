<div class="md:flex gap-4 z-20" data-controller="dashboard deck">
  <%= render 'shared/sidebar' %>
  <div class="relative mx-2 md:mx-10 mt-4 text-slate-900 md:p-2 z-20 font-semibold" style="width:98%">
    <%= render 'deck_header', fclass: @fclass, user: @user %>
    <h2 class="text-xl w-full border-b-2 border-slate-500">My decks (<span><%= @fclass.decks.size %></span>)</h2>
    <div>
    </div>
    <div class="w-11/12 md:w-full mx-auto">
      <% @decks.each do |deck| %>
        <%= render 'decks/deck_card', deck: deck %>
        <%= render 'decks/deck_option', deck: deck %>
      <% end %>
    </div>
    <div class="text-slate-600 md:text-slate-400 text-2xl md:text-2xl w-fit font-bold flex items-center my-4 cursor-pointer hover:text-slate-600 gap-2" 
      data-action="click->deck#show">
      <i class="fa-solid fa-circle-plus"></i>
      <span class="text-lg" data-sidebar-target="content">Create new deck</span>
    </div>
  </div>
  <%= render 'decks/modal' %>
  <%= render 'dashboards/modal' %>
</div>
