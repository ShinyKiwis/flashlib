<div class="hidden h-fit no-scrollbar overflow-auto mt-28 mx-auto w-fit text-2xl md:text-4xl text-center" data-study-target="question">
  <p>
    <%= card.question %>
  </p>
</div>
<div class="hidden h-fit no-scrollbar overflow-auto mt-28 mx-auto w-fit text-2xl md:text-4xl text-center" data-study-target="answer">
  <% card.answer.split("\n").each do |answer| %>
    <p class="text-left">
      <%= answer %>
    </p>
  <% end %>
</div>
