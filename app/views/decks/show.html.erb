<div class="md:flex gap-4 z-20" style="height:90%" data-controller="study" data-study-size=<%= @cards.size %>>
  <div class="relative md:mx-10 mt-4 text-slate-900 md:p-2 z-20 font-semibold w-full h-full flex flex-col items-center">
    <div class="flex items-center gap-4 px-2 w-full">
      <%= link_to "Back", dashboard_deck_path(@fclass), class:"bg-emerald-500 hover:bg-emerald-600 text-white font-semibold text-md px-4 py-1 rounded-lg" %>
      <h2 class="text-slate-500">Deck: <span class="text-emerald-500"><%= @deck.title %></span></h2>
      <h2 class="text-slate-500">Card: <span class="text-emerald-500"><span data-study-target="current">1</span>/<%= @cards.size %></span></h2>
    </div>
    <div class="w-10/12 md:w-7/12 flex-1 border-2 border-slate-500 mt-10 rounded-lg">
      <div class="w-full h-8 bg-slate-500">
      </div>
      <div class="h-32 md:h-96 px-2 md:px-4">
        <div class="font-semibold text-3xl text-slate-400 mt-2" data-study-target="state">Q</div>
        <% @cards.each do |card| %>
          <%= render 'study_card', card: card %>
        <% end %>
      </div>
    </div>
    <div class="w-fit mt-4">
      <button class="px-4 py-2 bg-slate-500 hover:bg-slate-600 text-slate-200 font-semibold rounded-lg" data-action="click->study#previous">Previous</button>
      <button class="px-4 py-2 bg-slate-500 hover:bg-slate-600 text-slate-200 font-semibold rounded-lg" data-action="click->study#reveal">Reveal answer</button>
      <button class="px-4 py-2 bg-slate-500 hover:bg-slate-600 text-slate-200 font-semibold rounded-lg" data-action="click->study#next">Next</button>
    </div>
  </div>
</div>
