<div class="w-full flex justify-center">
  <% if fclass.class_img.file.nil? %>
    <%= link_to deck_path("#{fclass.title.downcase.gsub(' ', '-')}-#{current_user.id}"),
      class: "cursor-pointer text-2xl #{active_fclass?(fclass.title) ? 'text-emerald-500 hover:text-emerald-600' : 'text-slate-400 hover:text-slate-500'} flex items-center justify-center gap-2 w-3/4 my-1 group" do %>
      <i class="fa-solid fa-clone"></i>
      <span class="hidden text-xl ms-auto w-3/4 font-semibold" data-sidebar-target="fclass"><%= fclass.title %></span>
      <span class="absolute hidden -right-2 shadow-lg shadow-slate-900/50 translate-x-full w-48 px-2 py-1 
      bg-zinc-800 rounded-lg text-slate-400 text-sm font-semibold" data-sidebar-target="prompt"><%= fclass.title %></span>
    <% end %>
  <% else %>
  <% end %>
  <!-- <span class="absolute opacity-0 group-hover:opacity-100 text-center text-slate-400 font-semibold z-50 bg-slate-950 w-fit"><%= fclass.title %></span> -->
</div>
